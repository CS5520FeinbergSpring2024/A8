<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etFriendUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Friend's Username"/>

    <EditText
        android:id="@+id/etStickerCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sticker Code"/>

    <Button
        android:id="@+id/btnSendSticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Sticker"/>

    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Sticker History"/>

    <Button
        android:id="@+id/btnViewCounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Sticker Counts"/>

    <TextView
        android:id="@+id/tvStickerCounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sticker Counts"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/tvStickerHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sticker History"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageView
        android:id="@+id/ivSticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/sticker" />


</LinearLayout>
